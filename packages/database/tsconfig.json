{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022"],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,    
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    
    "declaration": true,    
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": false
  },
}
